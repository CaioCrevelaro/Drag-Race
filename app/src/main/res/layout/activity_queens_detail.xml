<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.queens_detail.activity.QueensDetailActivity">

    <ImageView
        android:id="@+id/queens_detail_activity_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:src="@drawable/queen_image_1"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:alpha="0.85"/>

    <TextView
        android:id="@+id/queens_detail_activity_name"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:padding="16dp"

        android:text="Victoria 'Porkchop' Parker"
        android:fontFamily="@font/syncopate"
        android:textColor="@color/pink"
        android:textSize="24sp"

        android:gravity="center_horizontal"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.1"/>

    <Space
        android:id="@+id/spacer"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/queens_detail_activity_name"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintVertical_bias="0.4"/>

    <TextView
        android:id="@+id/queens_detail_activity_id"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_margin="16dp"
        android:padding="8dp"

        tools:text="ID"
        android:fontFamily="@font/syncopate"
        android:textColor="@color/pink"
        android:textSize="24sp"

        android:gravity="start"

        app:layout_constraintTop_toBottomOf="@id/spacer"
        />

    <TextView
        android:id="@+id/queens_detail_activity_congeniality"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_margin="16dp"
        android:padding="8dp"

        tools:text="CONGENIALITY"
        android:fontFamily="@font/syncopate"
        android:textColor="@color/pink"
        android:textSize="24sp"

        android:gravity="start"

        app:layout_constraintTop_toBottomOf="@id/queens_detail_activity_id"
        />

    <TextView
        android:id="@+id/queens_detail_activity_quote"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_margin="16dp"
        android:padding="8dp"

        tools:text="QUOTE"
        android:fontFamily="@font/syncopate"
        android:textColor="@color/pink"
        android:textSize="24sp"

        android:gravity="start"

        app:layout_constraintTop_toBottomOf="@id/queens_detail_activity_congeniality"
        />

    <TextView
        android:id="@+id/queens_detail_activity_winner"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_margin="16dp"
        android:padding="8dp"

        tools:text="WINNER"
        android:fontFamily="@font/syncopate"
        android:textColor="@color/pink"
        android:textSize="24sp"

        android:gravity="start"

        app:layout_constraintTop_toBottomOf="@id/queens_detail_activity_quote"/>

</androidx.constraintlayout.widget.ConstraintLayout>